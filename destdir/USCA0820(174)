) animationFlag = "&animation=" + animationFlag;
		else animationFlag = "";		
		
		var mapLayer = activeMapLayer;
		if(mapLayer) mapLayer = "&interactiveMapLayer=" + mapLayer;
		else mapLayer = "";
		
		var zoom = activeMapZoom;
		if(zoom) zoom = "&zoom=" + zoom;
		else zoom = "";
		
		if(isGold){					
			window.location = "http://gold.weather.com/weather/wxgold/mymaps/USCA0820"  + "?from=36hr_maps"+ zoom + animationFlag + mapLayer;
		}
		else window.location = "/outlook/travel/businesstraveler/map/interactive/USCA0820"  + "?from=36hr_maps"+ zoom + mapLayer + animationFlag;
	}	
	function showInteractiveGinsuMap(satOrRadar, zoom){
		activeMapZoom = zoom;
		// remove all children from element to force the png transparency issue
		var element = document.getElementById("interactiveMap");
		while (element.firstChild) { element.removeChild(element.firstChild);}
		document.getElementById("interactiveMap").appendChild(getInteractiveMap(satOrRadar, zoom));		
		
	}
	function getInteractiveMap(overlay, zoomLvl){return MapPane.create(36.6194, -121.9099, 440, 297, zoomLvl, 'r', overlay, 50);	}
	
	var tempX = 0;
	var tempY = 0;	
	function showBubble(){		document.getElementById("Bubblebar").style.display = "block";		 	}
	function hideBubble(){		document.getElementById("Bubblebar").style.display = "none";		 	}
