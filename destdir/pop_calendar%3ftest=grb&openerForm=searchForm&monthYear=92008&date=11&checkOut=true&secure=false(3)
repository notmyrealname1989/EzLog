    function reloadCalendar(openerForm, change) {
      var theForm = document.calControl;
      var month;
      var year;
      if((theForm.month.selectedIndex + change) < 0) {
        month = 11;
        year = theForm.year[0].value;
      } else if((theForm.month.selectedIndex + change) > 11) {
        month = 0;
        year = theForm.year[1].value;
      } else {
        month = theForm.month.selectedIndex + parseInt(change);
        year = theForm.year[theForm.year.selectedIndex].value
      }
      if(theForm.year.selectedIndex == 1 && year != 2008 && month > 6) {
        alert("You may only place a reservation up to 350 days in advance");
        return false;
      }
      //var jdate = "1";
      var jmonthYear = "" + month + year;
      document.location.href='/h/d/hi/1/en/pop_calendar?test=grb&openerForm=' + openerForm + '&monthYear=' + jmonthYear + '&date=1&secure=false&hdCal=null&dateFormat=null&checkOut=true';
    }

    function setToday(openerForm) {
      document.location.href='/h/d/hi/1/en/pop_calendar?test=grb&openerForm=' + openerForm + '&monthYear=62008&date=22&checkOut=true&hdCal=null&dateFormat=null&secure=false';
    }

    function setYear() {
      var theForm = document.calControl;
      if(6 > theForm.month.selectedIndex) {
        theForm.year.selectedIndex = 1;
      }
    }

    function getMonth() {
      var destForm = parent.document.forms.searchForm;
      var sourceForm = document.calControl;
      return sourceForm.month.value;
    }

    function getDate() {
      var destForm = parent.document.forms.searchForm;
      var sourceForm = document.calControl;
      return sourceForm.date.value;
    }

    function getYear() {
      var destForm = parent.document.forms.searchForm;
      var sourceForm = document.calControl;
      return sourceForm.year.value;
    }

    function setCheckInPopDate( date ) {
      var destForm = parent.document.forms.searchForm;
      var sourceForm = document.calControl;
      var month = sourceForm.month.value;
      var year = sourceForm.year.value;
      var monthYear = "" + month + year;
      var isHotelDetailCal = null;
      var outputDateFormat = 'null';
      
			if (isHotelDetailCal!=null) {
							
				inMonth = parseInt(month)+1;
				if (outputDateFormat=='yyyy/mm/dd') {
					destForm.checkInTextBox.value=year+"/"+inMonth+"/"+date;
				} else {
					destForm.checkInTextBox.value=date+"/"+inMonth+"/"+year;
				}
				
				var updateCheckOutDate = false;
				if (destForm.checkOutTextBox.value == '' || destForm.checkOutTextBox.value == outputDateFormat) {
					updateCheckOutDate = true;
 				}
 				if (isCheckOutBeforeCheckInDate()) {
 					updateCheckOutDate = true;
 				}
 				
 				if (updateCheckOutDate) {
					var outDateObj = new Date();
					var outDate = parseInt(date)+1;
					outDateObj.setFullYear(year, month, outDate);
					outMonth = parseInt(outDateObj.getMonth())+1;
					var outYear = outDateObj.getYear();
					if(outYear.toString().length == 3) {
						outYear = 2000 + (outDateObj.getYear() % 100);
					}
					if (outputDateFormat == 'yyyy/mm/dd') {
						destForm.checkOutTextBox.value=outYear+"/"+outMonth+"/"+outDateObj.getDate();
					} else {
						destForm.checkOutTextBox.value=outDateObj.getDate()+"/"+outMonth+"/"+outYear;
					}
				}
 			} else {
	      for (var i = 0 ; i < destForm.checkInDate.options.length ; i++)
	        if (destForm.checkInDate.options[ i ].text == parseInt(date))
	          destForm.checkInDate.options[ i ].selected = true;
	
	      for (var i = 0 ; i < destForm.checkInMonthYear.options.length ; i++)
	        if (destForm.checkInMonthYear.options[ i ].value == monthYear)
	          destForm.checkInMonthYear.options[ i ].selected = true;
      	populateCheckOut(destForm);
      }
		if (parent.document.getElementById('calendar_pop_in')) {
			parent.document.getElementById('calendar_pop_in').style.display = "none";
			}
		if (parent.document.getElementById('calendar_side_pop_in')) {
			parent.document.getElementById('calendar_side_pop_in').style.display = "none";
			}

    }

    function setCheckOutPopDate( date ) {
      var destForm = parent.document.forms.searchForm;
      var sourceForm = document.calControl;
      var month = sourceForm.month.value;
      var year = sourceForm.year.value;
      var monthYear = "" + month + year;
      var isHotelDetailCal = null;
      var outputDateFormat = 'null';
      
			if (isHotelDetailCal!=null) {
				outMonth = parseInt(month)+1;
				
				if (outputDateFormat == 'yyyy/mm/dd') {
					destForm.checkOutTextBox.value=year+"/"+outMonth+"/"+date;
				} else {
					destForm.checkOutTextBox.value=date+"/"+outMonth+"/"+year;
				}
 				if (isCheckOutBeforeCheckInDate()) {
 					var outDateObj = new Date();
					var outDate = parseInt(date)-1;
					outDateObj.setFullYear(year, outMonth, outDate);
					var outYear = outDateObj.getYear();
					if(outYear.toString().length == 3) {
						outYear = 2000 + (outDateObj.getYear() % 100);
					}
					
					if (outputDateFormat == 'yyyy/mm/dd') {
						destForm.checkInTextBox.value=outYear+"/"+outMonth+"/"+outDateObj.getDate();
					} else {
						destForm.checkInTextBox.value=outDateObj.getDate()+"/"+outMonth+"/"+outYear;
					}
 				}
 			} else {
 				for (var i = 0 ; i < destForm.checkOutDate.options.length ; i++) {
	      	if (destForm.checkOutDate.options[ i ].text == parseInt(date)) {
	        	destForm.checkOutDate.options[ i ].selected = true;
	        }
				}
				
	      for (var i = 0 ; i < destForm.checkOutMonthYear.options.length ; i++ ) {
	        if (destForm.checkOutMonthYear.options[ i ].value == monthYear )
	          destForm.checkOutMonthYear.options[ i ].selected = true
	      }
			}
		if (parent.document.getElementById('calendar_pop_out')) {
			parent.document.getElementById('calendar_pop_out').style.display = "none";
			}
		if (parent.document.getElementById('calendar_side_pop_out')) {
			parent.document.getElementById('calendar_side_pop_out').style.display = "none";
			}


    }

		/**
		 * Returns true if the check out date is before
		 * the check in date.  Function is added for HD2.
		 */
		function isCheckOutBeforeCheckInDate() {
		
			var isHotelDetailCal = null;
      var outputDateFormat = 'null';
      var destForm = parent.document.forms.searchForm;
      
			if (isHotelDetailCal!=null) {
				var cFullCheckInDate = destForm.checkInFullDate.value;
				var cFullCheckOutDate = destForm.checkOutFullDate.value;
				var checkInDateArray = cFullCheckInDate.split("/");
				var checkOutDateArray = cFullCheckOutDate.split("/");
				if (outputDateFormat=='yyyy/mm/dd') {				
					// CHECK IN/OUT DATE
					var cCheckInDate = checkInDateArray[2];
					var cCheckOutDate = checkOutDateArray[2];
					// CHECK IN/OUT MONTH
					var cCheckInMonth = checkInDateArray[1];
					var cCheckOutMonth = checkOutDateArray[1];					
					// CHECK IN/OUT YEAR
					var cCheckInYear = checkInDateArray[0];
					var cCheckOutYear = checkOutDateArray[0];
				} 
				// Date in format dd/mm/yyyy
				else {
					// CHECK IN/OUT DATE
					var cCheckInDate = checkInDateArray[0];
					var cCheckOutDate = checkOutDateArray[0];					
					// CHECK IN/OUT MONTH
					var cCheckInMonth = checkInDateArray[1];
					var cCheckOutMonth = checkOutDateArray[1];
					// CHECK IN/OUT YEAR
					var cCheckInYear = checkInDateArray[2];
					var cCheckOutYear = checkOutDateArray[2];
				}
				var compareDates = true;
				// CHECK IN/OUT DATE
				if(cCheckInDate == null || cCheckInDate == "dd" || cCheckInDate == ""){
				    cCheckInDate = "-1";
				    compareDates = false;
				}
				if(cCheckOutDate == null || cCheckOutDate == "dd" || cCheckOutDate == ""){
				    cCheckOutDate = "-1";
				    compareDates = false;
				}				
				// CHECK IN/OUT MONTH
				if(cCheckInMonth == null || cCheckInMonth == "mm" || cCheckInMonth == ""){
				    cCheckInMonth = "-1";
				    compareDates = false;
				}
				if(cCheckOutMonth == null || cCheckOutMonth == "mm" || cCheckOutMonth == ""){
				    cCheckOutMonth = "-1";
				    compareDates = false;
				}				
				// CHECK IN/OUT YEAR
				if(cCheckInYear == null || cCheckInYear == "mm" || cCheckInYear == ""){
				    cCheckInYear = "-1";
				    compareDates = false;
				}
				if(cCheckOutYear == null || cCheckOutYear == "mm" || cCheckOutYear == ""){
				    cCheckOutYear = "-1";
				    compareDates = false;
				}
				if (compareDates) {
					var cParsedCheckInDate = new Date(cCheckInYear, cCheckInMonth, cCheckInDate);
					var cParsedCheckOutDate = new Date(cCheckOutYear, cCheckOutMonth, cCheckOutDate);
					if (cParsedCheckInDate>=cParsedCheckOutDate) {
						return true;
					}
				}				
			}
			return false;
		}
		
